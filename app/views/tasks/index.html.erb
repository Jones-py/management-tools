<p id="notice"><%= notice %></p>
<h1>Tasks</h1>
<span class="search"><%=search_form_for @q do |f| %></span>
<span class="search"><%=f.label :Task_name %></span>
<span class="search"><%=f.search_field :name_cont %></span>
<span class="search"><%=f.label :status %></span>
<span class="search"><%=f.search_field :status_cont %></span>
<span><%=f.submit %></span>
<%end %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Details</th>
      <th><%=sort_link(@q, :Deadline, 'Deadline', default_order: :desc)%></th>
      <th>RegistrationDate</th>
      <th>status</th>
      <th><%=sort_link(@q, :priority, 'priority', default_order: :desc)%></th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>

  <% @tasks.each do |task| %>
      <tr>
        <td><%=task.name %></td>
        <td><%=task.details %></td>
<button type="button" class="btn btn-link"></button>


        <td><%=task.Deadline%></td>
        <td><%=task.created_at%></td>
        <td><%=task.status %></td>
        <td><%=task.priority%></td>
        <td><%= link_to 'Show', task, class:"btn btn-outline-primary btn-sm"%></td>
        <td><%= link_to 'Edit', edit_task_path(task),class:"btn btn-outline-success btn-sm" %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' },class:"btn btn-outline-danger btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'New Task', new_task_path %>
<br>
<p class="pagination"><%=paginate @tasks%></p>
